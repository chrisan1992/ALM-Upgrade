@model NOC_Macro.Models.Users

@{
    ViewBag.Title = "Create new User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Create new User</h2>
                <div class="clearfix"></div>
            </div>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-lg-2 col-sm-2 col-xs-12 col-md-2" for="">User Name</label>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-2 col-sm-2 col-xs-12 col-md-2" for="">Email</label>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-2 col-sm-2 col-xs-12 col-md-2" for="">Password</label>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                            @Html.PasswordFor(model => model.Emailpass, new { @class = "form-control" } )
                            @Html.ValidationMessageFor(model => model.Emailpass, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-2 col-sm-2 col-xs-12 col-md-2" for="">Confirm Password</label>
                        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                            <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" required="" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-sm-10 col-xs-12 col-md-10">
                            <input type="submit" value="Create" class="btn btn-success" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</div>  